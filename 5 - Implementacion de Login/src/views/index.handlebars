{{#if isUserLogged}}
    <div>   
        <h2>Welcome! {{userLogged.role}} </h2>
        <h2>{{userLogged.email}}</h2>
        <h2></h2>
        <button type="button" onclick="logout()" id="logoutButton">Logout</button>
        <h2></h2>
    </div>

    <div>
    
        <h1>List of products</h1>
        <h1></h1>
        <table>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Price</th>
                <th>Code</th>
                <th>Stock</th>
                <th>Description</th>
                <th>Thumbnail</th>
            </tr>
            {{#each productsData}}
                <tr>
                    <td id="productId">{{this.id}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.code}}</td>
                    <td>{{this.stock}}</td>
                    <td>{{this.description}}</td>
                    <td><img src={{this.thumbnail}} alt={{this.thumbnail}}></td>
                    {{!-- <td><button type="button" onclick="showProduct()">Show product</button></td> --}}
                    <td><button type="button" onclick="addToCart()">Add to cart</button></td>
                    <td><label for="quantity">Quantity</label> <input type="number" id="quantity" name="quantity"></td>
                    
                </tr>
            {{/each}}
            
        </table>
    </div>

    <div>
        <form>
        {{!-- <button onclick="redirectToCart()" id="cartButton">Go to cart</button> --}}
        CartId: <input type="text" name="cartId" id="cartId">
        
        </form>
    </div>

{{else}}
    <div>   
        <h1>Welcome!</h1>
        <h2>Please, login first</h2>
        <h2></h2>
        <button type="button" onclick="redirectLogin()" id="loginButton">Login</button>
    </div>
{{/if}}

<script src="/js/goToCart.js"></script>
<script src="/js/showProduct.js"></script>
<script src="/js/addToCart.js"></script>
<script src="/js/login.js"></script>

